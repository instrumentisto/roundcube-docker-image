root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab
indent_size = 4

[{Dockerfile,Dockerfile.tmpl.php}]
indent_style = space
indent_size = 4

[*.{bats,sh}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.nginx.conf]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4
